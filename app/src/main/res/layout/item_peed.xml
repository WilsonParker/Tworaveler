<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_peed$Root"
    android:layout_width="match_parent"
    android:layout_height="277dp"
    android:layout_marginTop="9dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="277">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="61"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="12"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:orientation="horizontal"
                android:weightSum="327.7">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="17.3"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="40"
                    app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="16.4"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="254"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_peed$TV_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="에비츄~"
                        android:textSize="13sp"
                        android:gravity="bottom"
                        android:paddingBottom="1.5dp"/>
                    <TextView
                        android:id="@+id/item_peed$TV_message"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:paddingTop="1.5dp"
                        android:textSize="9sp"
                        android:text="여행자 에비츄 입니다. 저와 함께 여행하실래요?"/>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="9"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="176">
            <ImageView
                android:id="@+id/item_peed$IV_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/default_Image_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/item_feed$IV_btn"
                android:layout_width="25dp"
                android:layout_height="5dp"
                android:layout_alignParentRight="true"
                android:layout_margin="11.3dp"
                android:background="@drawable/icon_more" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:weightSum="328">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="296"
                android:weightSum="296">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="188"
                    android:weightSum="40"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_peed$TV_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="22"
                        android:text="title"
                        android:textColor="@color/peed_title_color"
                        android:textSize="@dimen/TextSize_Feed_Title" />

                    <TextView
                        android:id="@+id/item_peed$TV_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="18"
                        android:text="2017..8.04 ~ 2017.09.30"
                        android:textColor="@color/peed_date_color"
                        android:textSize="@dimen/TextSize_Feed_Date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="108"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:weightSum="40">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="24"
                        android:gravity="center"
                        android:weightSum="108">

                        <ImageView
                            android:id="@+id/item_peed$IV_like"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="24"
                            android:background="@drawable/icon_heart_unclick" />

                        <TextView
                            android:id="@+id/item_peed$TV_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:textColor="@color/peed_num_color"
                            android:textSize="@dimen/TextSize_Feed_Num" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="8" />

                        <ImageView
                            android:id="@+id/item_peed$IV_comment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="24"
                            android:background="@drawable/icon_comment" />

                        <TextView
                            android:id="@+id/item_peed$TV_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:textColor="@color/peed_num_color"
                            android:textSize="@dimen/TextSize_Feed_Num" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="8" />

                        <ImageView
                            android:id="@+id/item_peed$IV_route"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="24"
                            android:background="@drawable/icon_route" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="16" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>