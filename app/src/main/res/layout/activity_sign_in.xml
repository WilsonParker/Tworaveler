<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="always"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="640">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="294.7"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/login$BT_main"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:text="Go to Main" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="160"
                android:minHeight="300dp"
                android:orientation="vertical"
                android:weightSum="160">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="48">

                    <EditText
                        android:id="@+id/activty_login$ET_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_email"
                        android:hint="@string/activity_login$hint_ET_email"
                        android:nextFocusDown="@+id/activty_login$ET_password"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/EditText_Left_Padding"
                        android:textCursorDrawable="@color/editText_cursor_color" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="48">

                    <EditText
                        android:id="@+id/activty_login$ET_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_password"
                        android:hint="@string/activity_login$hint_ET_password"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/EditText_Left_Padding"
                        android:textCursorDrawable="@color/editText_cursor_color" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="48">
                    <ImageButton
                        android:id="@+id/activity_login$IV_signIn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_login" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="185.3"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="185.3">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="47"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_weight="48">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <!-- 페이스북 버튼은 무조건 이 View를 사용해야
                            해요  그럼 못바꿔? 예 다른애들은 어케바꾼거?
                            -->
                            <Button
                                android:id="@+id/activity_login$BT_facebook"
                                android:layout_width="157dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_facebook" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <Button
                                android:id="@+id/activity_login$BT_kakao_logout"
                                android:layout_width="157dp"
                                android:layout_height="48dp"
                                android:background="@drawable/btn_kakao"
                                android:text="kakao logout"
                                android:visibility="invisible" />

                            <Button
                                android:id="@+id/activity_login$BT_kakao"
                                android:layout_width="157dp"
                                android:layout_height="48dp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/btn_kakao" />

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="90.3"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="90.3">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="25"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="65.3"
                                >
                            <TextView
                                android:id="@+id/login$BT_signUp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Nwe User?"
                                android:gravity="top|center_horizontal"
                                android:textColor="@color/colorWhite"
                                android:textSize="11sp"
                                android:textStyle="italic"
                                />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>