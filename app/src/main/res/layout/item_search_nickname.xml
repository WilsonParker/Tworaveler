<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical"
    android:weightSum="72"
    android:layout_marginTop="1dp"
    >
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="16"></ImageView>
    <LinearLayout
        android:id="@+id/item_search_nickname$LL_cell"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:weightSum="360"
        android:gravity="center">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="15"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_search_nickname$CV_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="10.3"/>
        <TextView
            android:id="@+id/item_search_nickname$TV_contents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="280"
            android:gravity="center_vertical"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
