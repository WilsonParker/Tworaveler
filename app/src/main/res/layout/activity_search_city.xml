<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="@string/DEVICE_HEIGHT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="56"
        android:background="@color/default_theme_Image_color"
        android:weightSum="@string/DEVICE_WIDTH">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="12" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="294"
            android:orientation="vertical"
            android:weightSum="56">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="32"
                android:background="@drawable/inputtext_search"
                android:orientation="horizontal">
                <!--android:background="@drawable/background_edittxet"-->

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="9" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="21.3"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:weightSum="32">

                    <!--<ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="5.3" />-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="21.3"
                        app:srcCompat="@drawable/icon_citysearch" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="12.3" />

                <EditText
                    android:id="@+id/search_city$ET_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="251.33"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textAlignment="gravity"
                    android:hint="@string/activity_search_city_hint_1"
                    android:textCursorDrawable="@drawable/cursor_edittext"
                    android:textSize="@dimen/TextSize_Content_1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="48"
            android:orientation="vertical"
            android:weightSum="56">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="4" />

            <ImageButton
                android:id="@+id/search_city$IB_cancel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="48"
                android:background="@drawable/icon_search_cancel" />
            <!--app:srcCompat="@drawable/icon_search_cancel"-->

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="4" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="8.7" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_city$RV_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
