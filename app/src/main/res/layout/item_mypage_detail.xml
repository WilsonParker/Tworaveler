<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_mypage_detail$Root"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="20dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="365">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="207"
            android:background="@color/item_mypage_detail_image_color">

            <ImageView
                android:id="@+id/item_mypage_detail$IV_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/item_mypage_detail$IV_more"
                android:layout_width="25dp"
                android:layout_height="5dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10.7dp"
                android:layout_weight="5"
                app:srcCompat="@drawable/icon_more" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="158"
            android:orientation="horizontal"
            android:weightSum="253">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="221"
                android:orientation="vertical"
                android:weightSum="158">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="8.7" />

                <TextView
                    android:id="@+id/item_mypage_detail$TV_city"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="18"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="8.7" />

                <TextView
                    android:id="@+id/item_mypage_detail$TV_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="14sp"
                    android:layout_weight="15" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="8.7" />

                <TextView
                    android:id="@+id/item_mypage_detail$TV_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="14sp"
                    android:layout_weight="15" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="8.7" />

                <TextView
                    android:id="@+id/item_mypage_detail$TV_memo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:layout_weight="39" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="8.7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="28.6"
                    android:gravity="right"
                    android:weightSum="219.6">

                    <!--  <ImageView
                          android:layout_width="0dp"
                          android:layout_height="0dp"
                          android:layout_weight="149.3" />-->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="103.3"
                        android:orientation="vertical"
                        android:weightSum="34.3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="24"
                            android:gravity="right|center_vertical"
                            android:weightSum="103.7">
                            <LinearLayout
                                android:id="@+id/item_mypage_detail$LL_like"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/item_mypage_detail$IV_like"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/icon_heart_unclick"
                                    />
                                <!--app:srcCompat="@drawable/icon_heart_unclick"-->

                                <TextView
                                    android:id="@+id/item_mypage_detail$TV_like"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/item_mypage_detail_count_color"
                                    android:textSize="@dimen/TextSize_Feed_Title" />
                            </LinearLayout>
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="7.7" />
                            <LinearLayout
                                android:id="@+id/item_mypage_detail$LL_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/item_mypage_detail$IV_comment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/icon_comment" />

                                <TextView
                                    android:id="@+id/item_mypage_detail$TV_comment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/item_mypage_detail_count_color"
                                    android:textSize="@dimen/TextSize_Feed_Title" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="16.7" />
    </LinearLayout>
</android.support.v7.widget.CardView>