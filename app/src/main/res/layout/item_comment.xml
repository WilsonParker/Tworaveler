<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_mypage$Root"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:layout_weight="73"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_comment$LL_see"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="72"
        android:orientation="horizontal"
        android:weightSum="@string/DEVICE_WIDTH">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="14.7" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="72">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_comment$IV_profile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="10.3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="264"
            android:orientation="vertical">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="17.7" />

            <TextView
                android:id="@+id/item_comment$TV_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="bottom"
                android:paddingBottom="2dp"
                android:text="Nickname"
                android:textSize="@dimen/TextSize_Comment_title" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2.2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="42">

                <TextView
                    android:id="@+id/item_comment$TV_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/EditText_Padding"
                    android:text="@string/comment_EditText_content"
                    android:textSize="@dimen/TextSize_Comment_content" />

                <EditText
                    android:id="@+id/item_comment$ET_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="textMultiLine"
                    android:maxLength="70"
                    android:maxLines="3"
                    android:paddingRight="@dimen/EditText_Padding"
                    android:textCursorDrawable="@drawable/cursor_edittext"
                    android:textSize="@dimen/EditTextSize_Content_2"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_comment$LL_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="31"
            android:gravity="center"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_comment$IV_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_more_2" />

                <TextView
                    android:id="@+id/item_comment$up_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/activity_comment_up_btn"
                    android:textColor="@color/default_theme_Image_color"
                    android:textSize="14sp"
                    android:visibility="invisible" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/underLine_color" />
</LinearLayout>