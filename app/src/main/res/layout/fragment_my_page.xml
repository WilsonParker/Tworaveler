<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.developer.hare.tworaveler.Fragment.Menu.FragmentMyPage">

<com.developer.hare.tworaveler.UI.Layout.MenuTopTitle
    android:id="@+id/fragment_mypage$topbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_top_title_height"
    android:layout_weight="0"
    app:leftButton="@drawable/button_left"
    app:titleText="@string/fragmentMyPage_title" />

<LinearLayout
    android:id="@+id/fragment_mypage$LL_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_mypage$IV_nologin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#dadada" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/fragmentMypage_notice" />
</LinearLayout>

</LinearLayout>
